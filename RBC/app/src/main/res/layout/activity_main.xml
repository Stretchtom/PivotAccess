<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff069cff">

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="NOTIFICATION FORM"
        android:id="@+id/notification"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:textSize="30dp"
        android:background="#ff19ff88" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVESTIGATION FORM"
        android:id="@+id/investigation"
        android:layout_below="@+id/notification"
        android:layout_marginTop="177dp"
        android:layout_alignLeft="@+id/notification"
        android:layout_alignStart="@+id/notification"
        android:layout_alignRight="@+id/notification"
        android:layout_alignEnd="@+id/notification"
        android:textSize="25dp"
        android:background="#ff19ff88" />
</RelativeLayout>
