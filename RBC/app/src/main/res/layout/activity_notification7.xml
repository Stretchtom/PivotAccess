<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.Notification7"
    android:id="@+id/notification7">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsexamfacility"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="BS examining facility"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsexamoffcier"
        android:hint="Examing officer"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PCR"
        android:id="@+id/textView43"
        android:layout_below="@+id/bsexamfacility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/pcrdate"
        android:hint="Date Collected"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView43"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specimen Collected"
        android:id="@+id/textView44"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/pcrdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioPCRcollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </RadioGroup>

    <RadioButton
        android:id="@+id/radioYespcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:checked="true"
        android:textSize="30dp"
        android:layout_below="@+id/pcrdate"
        android:layout_toRightOf="@+id/radioNopcr"
        android:layout_toEndOf="@+id/radioNopcr" />
    " />


    <RadioButton
        android:id="@+id/radioNopcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:checked="false"
        android:textSize="30dp"
        android:layout_below="@+id/pcrdate"
        android:layout_toRightOf="@+id/bsexamfacility"
        android:layout_toEndOf="@+id/bsexamfacility" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dbscard"
        android:hint="DBS Card"
        android:textSize="30dp"
        android:layout_below="@+id/radioNopcr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText10"
        android:hint="Date DBS sample sent to NHL"
        android:textSize="30dp"
        android:layout_below="@+id/dbscard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malaria Species (check all that apply)"
        android:id="@+id/textView45"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:id="@+id/radioPCRcollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </RadioGroup>

    <RadioButton
        android:id="@+id/radioVivax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vivax"
        android:checked="false"
        android:textSize="30dp"

        android:layout_below="@+id/textView45"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/radioMalarie"
        android:layout_alignEnd="@+id/radioMalarie" />


    <RadioButton
        android:id="@+id/radioFalciparum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Falciparum"
        android:checked="false"
        android:textSize="30dp"
        android:layout_below="@+id/textView45"
        android:layout_alignRight="@+id/textView45"
        android:layout_alignEnd="@+id/textView45" />
    <RadioButton
        android:id="@+id/radioMalarie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malariae"
        android:checked="false"
        android:textSize="30dp"
        android:layout_alignTop="@+id/radioNot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RadioButton
        android:id="@+id/radioNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Determined"
        android:checked="false"
        android:textSize="30dp"
        android:layout_below="@+id/radioFalciparum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next7"
        android:layout_below="@+id/radioNot"
        android:layout_alignRight="@+id/radioNot"
        android:layout_alignEnd="@+id/radioNot" />

</RelativeLayout>
