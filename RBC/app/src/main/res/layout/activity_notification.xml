<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.Notification"
    android:id="@+id/notification">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="District"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/district"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/hospital"
        android:layout_alignStart="@+id/hospital"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/fName"
        android:layout_alignEnd="@+id/fName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/district"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/hospital"
        android:layout_alignBottom="@+id/textView2"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/facilityName"
        android:layout_alignStart="@+id/facilityName"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@+id/fName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:id="@+id/textView3"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/facilityName"
        android:layout_below="@+id/hospital"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/fName"
        android:layout_alignEnd="@+id/fName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case No"
        android:id="@+id/textView4"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignLeft="@+id/facilityName"
        android:layout_alignStart="@+id/facilityName" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/CaseCode"
        android:layout_below="@+id/facilityName"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/fName"

        android:inputType="text"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/sName"
        android:layout_alignStart="@+id/sName" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/sName"
        android:layout_below="@+id/fName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/sName"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7">



    <RadioButton
        android:id="@+id/radioMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:checked="false"
        android:textSize="30dp"
        android:layout_above="@+id/textView11"
        android:layout_toRightOf="@+id/radioFemale"
        android:layout_toEndOf="@+id/radioFemale" />

    <RadioButton
        android:id="@+id/radioFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:checked="false"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioPatient"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/CaseCode"
        android:layout_alignEnd="@+id/CaseCode">


        <RadioButton
        android:id="@+id/radioInpatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In patient"
        android:checked="true"
        android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radioOutpatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out patient"
            android:checked="true"
            android:textSize="30dp" />

    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioRefered"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/radioPatient"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/DOBinput"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/DOBinput">



    <RadioButton
        android:id="@+id/radioYesref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <RadioButton
        android:id="@+id/radioNoref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:textSize="30dp"
        android:layout_alignTop="@+id/radioYesref"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textView7"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:id="@+id/textView8"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/sName"
        android:layout_toLeftOf="@+id/CaseCode"
        android:layout_toStartOf="@+id/CaseCode" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textView9"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/facilityName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:id="@+id/textView6"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/DOBinput"
        android:layout_alignEnd="@+id/DOBinput" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Going to be Refered"
        android:id="@+id/textView10"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/radioPatient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:id="@+id/textView11"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/radioSex"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/DOBinput"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/radioSex"
        android:layout_alignStart="@+id/radioSex"
        android:inputType="date" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next1"
        android:layout_alignTop="@+id/DOBinput"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

</RelativeLayout>
